{% extends 'layout.html.twig' %}

{% block title %}Gestion des produits{% endblock %}

{% block content %}

   <h1 class="mt-4">{{ title }}</h1>

     {% for message in app.session.flashBag.get('success') %}
        <span class="alert alert-sucess">{{message}}</span><br>
        {% endfor %}
     {% for message in app.session.flashBag.get('error') %}
        <span class="alert alert-danger">{{message}}</span><br>
        {% endfor %}

    <div class="row">
        {#{% for message in app.session.flashbag.get('success') %}#}
            {#<span class="alert alert-success">{{ message }}</span>#}
        {#{% endfor %}#}
    </div>

    <div class="row">
        <div class="col-12">
            <p style="text-align: right;"><strong>Nombre de produit(s) dans la boutique : {{ produits | length }} </strong></p>
        </div>

        <table class="table table-striped table-hover table-dark">
            <tr>
                <th>Photo</th>
                <th>#</th>
                <th>Réf.</th>
                <th>Titre</th>
                <th>Catégorie</th>
                <th>Couleur</th>
                <th>Taille</th>
                <th>Description</th>
                <th>Public</th>
                <th>Prix</th>
                <th>Stock</th>
                <th colspan="3">Action</th>
            </tr>
            <tbody>
            {% for produit in produits %}
                <tr>
                    <td><img height="50px" src="{{ asset('photo/' ~ produit.photo)}}"></td>
                    <td> {{produit.idProduit}} </td>
                    <td> {{produit.reference}} </td>
                    <td> {{produit.titre}} </td>
                    <td> {{produit.categorie}} </td>
                    <td> {{produit.couleur}} </td>
                    <td> {{produit.taille}} </td>
                    <td> {{produit.description}} </td>

                    {% if produit.public == 'm' %}
                    <td>Homme</td>
                    {% elseif produit.public == 'f' %}
                    <td>Femme</td>
                    {% else %}
                    <td>Mixte</td>
                    {% endif %}

                    <td> {{produit.prix | number_format(2, ',', '')}} €</td>
                    <td> {{produit.stock}} </td>

                    <td>
                        <a target="_blank" href="{{path('produit', {'id' : produit.idProduit})}}">
                            <i class="text-info fas fa-eye"></i>
                        </a>
                    </td>
                    <td>
                        <a href="">
                            <i class="text-warning fas fa-edit"></i>
                        </a>
                    </td>
                    <td>
                        <a href="{{path('delete_produit', {'id' : produit.idProduit})}}">
                        <i class=" text-danger fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
                   {# {% for key, pdt in produits %}
                <tr>
