{% extends 'adminLayout.html.twig' %}

{% block content %}

     <div class="container">
        <div class="row">
            <div class= "col-lg-12">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Technology</th>
                            <th scope="col">niveau</th>
                            <th colspan="2">Action</th>

                        </tr>
                    </thead>
                    <tbody>
                     {% for competence in competences %}
                        <tr>
                            <th scope="row">
                                <i class="img-fluid {{competence.cptechnology}}"></i>
                            </th>
                            <td>
                            {% if competence.cplevel == 1 %}
                                <span class="text-info">Débutant</span>
                            {% elseif competence.cplevel == 2  %}
                                <span class="text-info">Intermédiaire</span>
                            {% elseif competence.cplevel == 3  %}
                                <span class="text-info">Avancé</span>
                            {% elseif competence.cplevel == 4  %}
                                <span class="text-info">Expert</span>
                            {% endif %}
                                {# <select>
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                    <option>4</option>
                                </select> #}
                            </td>
                            <td>
                                <a href="" title="modifier">
                                    <i class="fas fa-wrench text-success"></i>
                                </a>
                            </td>
                            <td>
                                <a  href="{{path('competence',{'id' : competence.idcompetence})}} ">
                                  <i class="fas fa-trash-alt text-danger" title="supprimer"></i>
                                </a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div class = "col-lg-8 mt-5">
                <a class="btn btn-block alert-secondary" href="{#{{path('add_competence')}}#}">Ajouter une nouvelle competence </a>
            </div>
        </div>
    </div>
 
{% endblock %}