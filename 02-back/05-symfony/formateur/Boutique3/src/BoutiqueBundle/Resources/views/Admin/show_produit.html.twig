{% extends 'layout.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
	<h1 class="mt-4">{{ title }}</h1>
	
	{% for message in app.session.flashbag.get('success')%}
		<span class="alert alert-success">{{ message }}</span><br/>
	{% endfor %}
	{% for message in app.session.flashbag.get('error')%}
		<span class="alert alert-danger">{{ message }}</span><br/>
	{% endfor %}
	
	
	 <div class="row">
		<div class="col-6">
			<a href="{{ path('add_produit') }}" class="m-3 btn btn-primary">Ajouter un produit</a>
		</div>
        <div class="col-6">
            <p style="text-align: right;"><strong>Nombre de produits dans la boutique : {{ produits | length }} </strong></p>
        </div>
		

        <table class="table table-striped table-hover table-dark">
	
		<!-- contenu du tableau -->
		
		<tr>
			<th>Photo</th>
			<th>Id du produit</th>
			<th>Référence</th>
			<th>Catégorie</th>
			<th>Titre</th>
			<th>Prix</th>
			<th>Taille</th>
			<th>Public</th>
			<th>Stock</th>
			<th>Description</th>
			<th colspan="3">Action</th>
		</tr>
		
		
		{% for produit in produits %}
		<tr>
			<td><img height="50px" src="{{ asset('photo/' ~ produit.photo ) }}"/></td>
			<td>{{ produit.idProduit }}</td>
			<td>{{ produit.reference }}</td>
			<td>{{ produit.categorie }}</td>
			<td>{{ produit.titre }}</td>
			<td>{{ produit.prix | number_format(2, ',', ' ') }}€</td>
			<td>{{ produit.taille }}</td>
			
			{% if produit.public == 'm' %}
				<td>Homme</td>
			{% elseif produit.public == 'f' %}
				<td>Femme</td>
			{% else %}
				<td>Mixte</td>			
			{% endif %}
			
			<td>{{ produit.stock }}</td>
			<td>{{ produit.description }}</td>
			
			<td>
				<a target="_blank" href="{{ path('produit', {'id' : produit.idProduit} ) }}">
					<i class="text-white  fas fa-eye"></i>
				</a>
			</td>
			<td>
				<a href="{{ path('update_produit', {'id' : produit.idProduit} ) }}">
					<i class="text-white fas fa-edit"></i>
				</a>
			</td>
			
			
			
			
			<td><a href="{{ path('delete_produit', {'id' : produit.idProduit} ) }}"><i class="text-white fas fa-trash-alt"></i></a></td>

			
		</tr>
		{% endfor %}
	
		</table>
	</div>
	


{% endblock %}